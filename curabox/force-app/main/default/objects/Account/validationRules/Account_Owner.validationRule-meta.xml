$Profile.Name = &apos;pflege.de - Allgemein&apos;
)</errorConditionFormula>
    <errorDisplayField>OwnerId</errorDisplayField>
    <errorMessage>Der Accountinhaber von Pflegediensten darf nicht ge√§ndert werden.</errorMessage>
</ValidationRule>
